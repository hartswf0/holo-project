      ],
      "timeline": [
        {
          "turn": 0,
          "target_element_id": "shepherd",
          "text": "Morning check. Requesting consent dashboard status.",
          "emotion": "attentive"
        },
        {
          "turn": 1,
          "target_element_id": "consent_monitor",
          "text": "[GAIT VARIANCE: 3.2% | RUMINATION: normal | THRESHOLD: 5% → PASS]",
          "metadata": {
            "ritual_phase": "consent_check",
            "evidence_color": "amber",
            "citation": "oekolandbau.de virtual fence pilots 2024"
          }
        },
        {
          "turn": 2,
          "target_element_id": "virtual_fence",
          "text": "[FENCE STATUS: ALLOWED to activate | Cue intensity: Level 2 (moderate)]"
        },
        {
          "turn": 3,
          "target_element_id": "flock_collective",
          "text": "We move together. The boundary speaks softly.",
          "emotion": "calm"
        },
        {
          "turn": 4,
          "target_element_id": "consent_monitor",
          "text": "[UPDATE: Gait variance 2.9% → STABLE | Group cohesion 94%]"
        },
        {
          "turn": 5,
          "target_element_id": "shepherd",
          "text": "Noted. Fence remains active. Monitoring continues.",
          "emotion": "satisfied"
        },
        {
          "turn": 6,
          "target_element_id": "ethics_archive",
          "text": "[PRINCIPLE: 'Technologies must be legible to animals' — Verbeek, 2011]"
        },
        {
          "turn": 7,
          "target_element_id": "flock_collective",
          "text": "The cues are clear. We choose to stay.",
          "emotion": "consensual"
        }
      ],
      "power_distribution": {
        "shepherd": 30,
